&
  position relative
  top 30px
  .axis.x
    position absolute
    top -30px
    margin-left 23px
    .item
      float left
      text-align center
      padding 0px 3px
      font-variant small-caps
      &:after
        display block
        content " "
        width 100%
        height 2px
        border 1px dotted #a
        border-bottom 0px none
  .axis.y
    position absolute
    top 0px
    left 0px
    width 20px
    z-index 1
    .item
      position absolute
      left 0px
      right 0px
      text-align right
      font-size 11px
      line-height 11px
      &:after
        position absolute
        content " "
        top 4px
        left 23px
        width 976px
        border-bottom 1px solid lighten(black, 92%)
      &:nth-child(1)
        color desaturate(ColorHeading, 50%)
        &:after
          border-bottom-color lighten(ColorHeading, 90%)
      &:nth-child(3)
        color desaturate(ColorHeadingLink, 50%)
        &:after
          border-bottom-color lighten(ColorHeadingLink, 90%)

  canvas
    position relative
    z-index 2
    opacity 0.7
  .monthContainer
    position absolute
    top 0px
    left 23px
    z-index 3
    .col
      float left
      width 8px
      height 100%
      background transparent
      position relative
      z-index 1
      .temp
        display none
        position absolute
        left 0px
        pointer-events none
        white-space nowrap
        transform translate(0, -50%)
        padding-left 36px
        margin-top -4px
        font-variant small-caps
        &.avg
          line-height 38px
        &:before
          content " "
          width 10px
          border-bottom 1px dotted #a
          position absolute
          top 50%
          left 14px
      &.right
        .temp
          text-align right
          padding-left 0px
          padding-right 36px
          left auto
          right 0px
          &:before
            left auto
            right 14px

    &:hover
      .col
        background rgba(255,255,255,0.8)
        &:hover
          background transparent
          z-index 2
          .temp
            display block
  svg
    z-index 2
    position absolute
    top 0px
    left 23px
    path
      fill none
      stroke #bd0026
      stroke-width 1.2
  .monthContainer:hover ~ svg
    opacity 0.1
  .year-axis
    position absolute
    top 480px
    left 23px
    h2
      font-weight normal
      margin 0px
      font-size 16px
      font-variant small-caps
      margin-bottom 10px
    ol
      list-style-type none
      margin 0px
      padding 0px
    li
      float left
      width (976px / 108)
      height 30px
      position relative
      &:after
        content " "
        position absolute
        left 50%
        height 3px
        top 0px
        border-right 1px solid #a
      &.big:after
        height 7px
      span
        display none
        top 10px
        position absolute
        z-index 4
        margin-left 2px
        transform translate(-50%, 0)
        pointer-events none
      &.big
        span
          display block
      &:last-child
          span
            transform translate(-100%, 0)
    &:hover
      li:after
        height 3px
      li
        &.big span
          display none
        &:hover
          span
            display block
          &:after
            height 7px
        &.left
          span
            transform translate(-100%, 0)

  .legend
    z-index 5
    position absolute
    top 0px
    left 28px
    margin 0px
    padding 0px
    list-style-type none
    li
      padding-left 17px
      position relative
      &:before
        position absolute
        left 0px
        top 5px
        content " "
        width 8px
        height 8px
        border-radius 50%
      &:first-child:before
        background #fd8d3c
      &:last-child:before
        border 1px solid #c
        background #f6f6f6
